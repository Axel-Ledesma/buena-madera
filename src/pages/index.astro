---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Compromiso from "../components/Compromiso.astro";
import Beneficios from "../components/Beneficios.astro";
import Galeria from "../components/Galeria.astro";
import Catalogo from "../components/Catalogo.astro";
import Mobiliario from "../components/Mobiliario.astro";
import Whatsapp from "../components/extras/Whatsapp.astro";
import Linea from "../components/extras/Linea.astro";
---

<Layout title="Buena Madera - GEA Sustentable">
  <main>
    <Nav />
    <section
      class="text-center bg-fondo bg-cover h-screen flex justify-center items-center flex-col text-white px-2"
    >
      <h1 class="text-4xl xl:text-6xl text-balance font-semibold py-6 px-3">
        Madera fabricada con plásticos 100% reciclados
      </h1>
      <Linea class="border-b w-[90%] md:w-2/4 border-marron"/>
      <h2 class="py-6 text-lg lg:text-xl xl:text-2xl tracking-widest">
        Duradera, resistente y sostenible
      </h2>
    </section>
    <Compromiso id="Compromiso" />
    <Beneficios id="Beneficios" />
    <Galeria />
    <Mobiliario id="Productos" />
    <Catalogo />
    <footer id="Contacto" class="text-center py-12 px-5 ">
      <img class="h-32 mx-auto" src="/footer/bm.webp" alt="" />
      <h3 class="py-4 text-xs md:text-base lg:text-lg font-bold tracking-wide">
        Autopista Aramburu Km 280.5 <br />
        Alvear, Santa Fe. Argentina
      </h3>
      <Linea class="border-b w-60 border-marron py-2 mx-auto"/>
      <p class="py-6 md:text-lg lg:text-xl">
        En <span class="text-marron">buena madera</span> brindamos asesoramiento
        personalizado. <br />
        ¡Comunicate con nosotros!

        <a
          class="block mx-auto w-min"
          href="https://wa.link/2v6t9l"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Boton para dirigirse al WhatsApp de Buena Madera"><Whatsapp class="size-20 my-4" /></a
        >
        O nos podes contactar por mail a buenamadera@geasustentable.com.ar
      </p>
    </footer>
  </main>
</Layout>
